        android:layout_height="wrap_content" />


    <View
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtDailyDay0"
            style="@style/txt.Hour"
            android:text="ThusesDay"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageHourly0"
            android:src="@drawable/weather_image"
            android:layout_width="50dp"
            android:layout_marginRight="10dp"
            android:layout_height="50dp" />


        <TextView
            android:id="@+id/txtDailyMin0"
            style="@style/txt.Hour"
            android:text="20°c"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/txtDailyMax0"
            style="@style/txt.Hour"
            android:text="26°c"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />



    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtDailyDay1"
            style="@style/txt.Hour"
            android:text="ThusesDay"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
