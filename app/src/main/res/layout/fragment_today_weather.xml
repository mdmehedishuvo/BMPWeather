        <TextView
            android:layout_marginTop="10dp"
            android:theme="@style/txt"
            android:text="Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:src="@drawable/weather_image"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_height="100dp" />


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Feels Like"
                            style="@style/txt.Details"
                            android:layout_gravity="start"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content" />


                        <TextView
                            android:text="95°"
                            style="@style/txt.Details"
                            android:layout_gravity="end"
                            android:layout_width="0dp"
                            android:id="@+id/txtDetailsFeelisLike"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />



                    </LinearLayout>

                    <View
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/darker_gray"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Humidity"
                            style="@style/txt.Details"
                            android:layout_gravity="start"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content" />


                        <TextView
                            android:text="90%"
                            style="@style/txt.Details"
                            android:layout_gravity="end"
                            android:id="@+id/txtDetailsHumidity"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />



                    </LinearLayout>

                    <View
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/darker_gray"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Visibility"
                            style="@style/txt.Details"
                            android:layout_gravity="start"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content" />


                        <TextView
                            android:id="@+id/txtDetailsVisibily"
                            android:text="10 mls"
                            style="@style/txt.Details"
                            android:layout_gravity="end"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />



                    </LinearLayout>

                    <View
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/darker_gray"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="UV Index"
                            style="@style/txt.Details"
                            android:layout_gravity="start"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content" />


                        <TextView
                            android:text="0(Low)"
                            style="@style/txt.Details"
                            android:layout_gravity="end"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />



                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:text="Tonight - Cloudy. Winds from SSE to E. The overnight low will be 80 °F (26.7 °C)."
                android:textColor="@android:color/white"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18dp"
                android:id="@+id/txtDetailsCondition1"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginTop="10dp"
                android:text="Today - Thunderstorms with a high of 92 °F (33.3 °C). Winds variable."
                android:textColor="@android:color/white"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18dp"
                android:id="@+id/txtDetailsCondition2"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <TextView
            android:layout_marginTop="20dp"
            android:theme="@style/txt"
            android:text="Sun &amp; Moon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        <View
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="131dp"
                android:layout_marginRight="131dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/monspace" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_medium"
                android:text="First Quarter"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:srcCompat="@drawable/sun" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="44dp"
                android:layout_height="29dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="26dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="@+id/txtSunSet"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:srcCompat="@drawable/sun1" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="30dp"
                android:layout_height="23dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="72dp"
                android:layout_marginLeft="73dp"
                android:layout_marginRight="72dp"
                android:layout_marginStart="73dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="@+id/textView"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:srcCompat="@drawable/moon3" />

            <TextView
                android:id="@+id/txtSunSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/roboto_medium"
                android:text="5.20 am"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <TextView
                android:id="@+id/txtMoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="57dp"
                android:layout_marginRight="57dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/roboto_medium"
                android:text="6.55 pm"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />
        </android.support.constraint.ConstraintLayout>


        <TextView
            android:layout_marginTop="10dp"
            android:theme="@style/txt"
            android:text="map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>


        <View
            android:id="@+id/mapCointainer"
            android:layout_marginBottom="40dp"
            android:background="@drawable/h1"
            android:layout_width="match_parent"
            android:layout_height="300dp" />




    </LinearLayout>
</ScrollView>