<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/about_back"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/photoHeader"
        layout="@layout/photo_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/relativeLayout"
        app:layout_anchorGravity="top|center" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:paddingBottom="16dp"
        android:elevation="2dp"
        android:background="@drawable/about_header_back">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="68dp"
            android:layout_marginBottom="8dp"
            android:text="Md Mehedi Hasan Shuvo"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tvName"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:lines="2"
            android:text="Director of Project Management at Tusu Usa"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/tvEducation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tvTitle"
            android:layout_marginBottom="4dp"
            android:text="Barisal Polytechnic Institute - Barisal"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tvEducation"
            android:layout_marginBottom="16dp"
            android:text="Kalkini,Madaripur 7920"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"/>

        <Space
            android:id="@+id/spaceHolder"
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:layout_below="@id/tvEducation"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btnMessage"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/spaceHolder"
            android:layout_toStartOf="@id/spaceHolder"
            android:layout_below="@id/tvAddress"
            android:layout_marginBottom="16dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:onClick="btnMesage"
            android:background="@drawable/message_back"
            android:textColor="@color/colorButton"
            android:text="message"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/spaceHolder"
            android:layout_toEndOf="@id/spaceHolder"
            android:layout_below="@id/tvAddress"
            android:layout_marginBottom="16dp"
            android:paddingStart="10dp"
            android:onClick="btnConnect"
            android:paddingLeft="10dp"
            android:id="@+id/btnConnect"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/color_button"
            android:textColor="@android:color/white"
            android:text="connect"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/tvSummary"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnMessage"
            android:gravity="center"
            android:lines="2"
            android:ellipsize="end"
            android:text="I'm a renewable energy executive with 1 years of experience, and have built strong skills in getting companies"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"/>
    </RelativeLayout>



</android.support.design.widget.CoordinatorLayout>